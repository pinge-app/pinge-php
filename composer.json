{
    "name": "pinge/pinge-php",
    "description": "The Pinge PHP SDK.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pinge",
            "email": "hello@pinge.app"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Pinge\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pinge\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "pinge/pinge-coding-standard": "^1.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "./vendor/bin/phpcs --standard=ruleset.xml ./src &&  ./vendor/bin/phpunit tests/"
    }
}
